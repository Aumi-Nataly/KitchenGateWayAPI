      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7206"
        }
      ],
      "UpstreamPathTemplate": "/api/ManagmentRecipe/{everything}", //как пользователь обращается к шлюзу
